<section class="vh-100 bg-image mt-5" style="
    background-image: url('https://mdbcdn.b-cdn.net/img/Photos/Others/images/76.webp')
  ">
    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10 mt-5">
                <div class="card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images p-3">
                                <div class="text-center p-4"> <img src="/public/images/product/{{product.product_img}}"
                                        width="250" /> </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product p-4">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center"> <i class="fa fa-long-arrow-left"></i><a
                                            href="/products">
                                            <span class="ml-1 text-muted">Back</span></a> </div> <i
                                        class="fa fa-shopping-cart text-muted"></i>
                                </div>
                                <div class="mt-4 mb-3">
                                    <h5 class="text-uppercase">{{product.name}}</h5>
                                    <div class="price d-flex flex-row align-items-center"> <span
                                            class="act-price">${{product.price}}</span>

                                    </div>
                                </div>
                                <div class="mt-4 mb-3">
                                    <p class="text-uppercase">Rating: <span>{{product.overallrating}}<i
                                                class="bi bi-star-fill"
                                                style="position:relative; left: 8px; top:-4px;"></i></span></p>
                                </div>
                                <p class="about">{{product.description}}</p>
                                <div class="sizes mt-2">
                                    {{#if product.size.length}}
                                    <h6 class="text-uppercase">Size</h6>
                                    {{#each product.size}}
                                    <label class="radio"> <input type="radio" name="size" value="{{this}}">
                                        <span>{{this}}</span>
                                        {{/each}}
                                        {{/if}}

                                </div>
                                <p class="bt-1">Quantity</p>
                                <select id="quantity" name="quantity">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>

                                </select>
                                <div class="cart mt-4 align-items-center"> <button
                                        class="btn btn-danger text-uppercase mr-2 px-4">Add to cart</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-5">
            <div class="col-4">
            </div>
            <div class="col-6">
                <h1>Comments</h1>
            </div>

        </div>
        <div class="overflow-auto">dfjbjbsjbdsjbdjsbdkjsbdsjbdskjdbsjdjsdb</div>
    </div>

    </div>

</section>