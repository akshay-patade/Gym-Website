<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="page-titles">
                            <h3>Add Blog Category</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="form-valide" action="/admin/blogCategorys/update/{{blogCategorys._id}}"
                                    method="post">
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="blog_name">Blog Category Name <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" required class="form-control input-default"
                                                id="blog_name" name="name" value="{{blogCategorys.name}}"
                                                placeholder="Enter a Blog Category name..">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="description">Description
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <textarea class="form-control input-default" id="description"
                                                name="description" rows="5"
                                                placeholder="Category description">{{blogCategorys.description}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-lg-8">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
                                    </div>
                                    {{#if err}}
                                    <div class="form-group">
                                        <label class="erro-info">{{err}}</label><br />
                                    </div>
                                    {{/if}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>



    {{> footer}}

</div>