<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="page-titles">
                            <h3>Edit Blog</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="form-valide" action="/admin/blogs/updpate/{{blog._id}}" method="post">
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="blog_name">Blog Name <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" required class="form-control input-default"
                                                id="blog_name" value="{{blog.blog_name}}" name="blog_name"
                                                placeholder="Enter a Blog name..">
                                            <input type="hidden" value="{{blog.user_id}}" name="user_id">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="blog_category_id">Blog Category
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <select class="form-control" id="blog_category_id" name="blog_category_id">
                                                <option value="" disabled>Please select</option>
                                                {{#each blogCategory}}
                                                <option value="{{_id}}">{{name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="description">Description
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <textarea class="form-control input-default" id="description"
                                                name="description" rows="5"
                                                placeholder="Product description">{{blog.description}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label">Show On Website <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <div class="form-check form-check-inline">
                                                <label class="switch">
                                                    <input type="checkbox" id="show_on_website" name="show_on_website"
                                                        role="switch" {{#if blog.show_on_website}}checked {{/if}}>
                                                    <span class="slider round"></span>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    {{#if err}}
                                    <div class="form-group">
                                        <label class="erro-info">{{err}}</label><br />
                                    </div>
                                    {{/if}}
                                    <div class="form-group row">
                                        <div class="col-lg-8">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>



    {{> footer}}

</div>