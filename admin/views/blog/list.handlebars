<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">

        <div class="row page-titles mx-0">
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Blog</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="row col-12">
                        <div class="button-icon">
                            <a class="text-white" href="/admin/blogs/add-form"><button type="button"
                                    class="btn mb-1 btn-primary">Add Blog<span class="btn-icon-right"><i
                                            class="fa fa-plus"></i></span>
                                </button></a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Blogs</h4>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>Blog Name</th>
                                            <th>Blog Category</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each blog}}
                                        <tr>
                                            <td>{{blog_name}}</td>
                                            <td>{{blog_category.name}}</td>
                                            <td>{{description}}</td>
                                            <td>

                                                <label class="switch">
                                                    <input type="checkbox" id="{{_id}}"
                                                        onchange="status('{{_id}}','{{base_url}}/admin/blogs/change-status/{{_id}}')"
                                                        role="switch" {{#if show_on_website}}checked {{/if}}>
                                                    <span class="slider round"></span>
                                                </label>
                                            </td>
                                            <td><span><a href="/admin/blogs/{{_id}}" data-toggle="tooltip"
                                                        data-placement="top" title="" data-original-title="Edit"><i
                                                            class="fa fa-pencil color-muted m-r-5"></i> </a></span>
                                            </td>
                                        </tr>
                                        {{/each}}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>



    {{> footer}}

</div>