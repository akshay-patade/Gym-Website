<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">

        <div class="row page-titles mx-0">
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Users</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Users</h4>
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered zero-configuration">
                                    <thead>
                                        <tr>
                                            <th>First Name</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Gender</th>
                                            <th>Phone No</th>
                                            <th>Zipcode</th>
                                            <th>Date of Birth</th>
                                            <th>Address</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each allUser}}
                                        <tr>
                                            <td>{{firstname}}</td>
                                            <td>{{lastname}}</td>
                                            <td>{{email}}</td>
                                            <td>{{gender}}</td>
                                            <td>{{cell}}</td>
                                            <td>{{zipcode}}</td>
                                            <td>{{dob}}</td>
                                            <td>{{address}}</td>
                                            <td>
                                                <label class="switch">
                                                    <input type="checkbox"  id="{{_id}}" role="switch" onchange="status('{{_id}}','{{base_url}}/admin/change-status/{{_id}}')"
                                                        role="switch" {{#if status}}checked {{/if}}>
                                                    <span class="slider round"></span>
                                                </label>
                                               

                                            </td>
                                        </tr>
                                        {{/each}}
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>

    {{> footer}}

</div>