<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">

        <div class="row page-titles mx-0">
            <div class="col p-md-0">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Profile</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="media align-items-center mb-4">
                                <img class="mr-3" src="{{base_url}}/images/avatar/11.png" width="80" height="80" alt="">
                                <div class="media-body">
                                    <h3 class="mb-0">{{userDetails.name}}</h3>
                                </div>
                            </div>
                            <ul class="card-profile__info">
                                {{!-- <li class="mb-1"><strong class="text-dark mr-4">Mobile</strong>
                                    <span>{{userDetails.firstname}}</span>
                                </li> --}}
                                <li><strong class="text-dark mr-4">Email</strong> <span>{{userDetails.email}}</span></li>
                            </ul>
                            <hr />
                            <div class="col-12">
                                <div class="col-12 mb-4 page-titles">
                                    <h3>Change Password</h3>
                                </div>
                                <form class="form-valide col-lg-6" method="post" action="/admin/change-password">
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="newpassword">New Password <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="password" required class="form-control input-default"
                                                id="newpassword" name="password" placeholder="New Password">
                                        </div>
                                    </div>
                                    {{#if err}}
                                    <div class="form-group">
                                        <label class="erro-info">{{err}}</label><br />
                                    </div>
                                    {{/if}}
                                    <div class="form-group row">
                                        <div class="col-lg-8">
                                            <button type="submit" class="btn btn-primary">Update</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>



    {{> footer}}

</div>