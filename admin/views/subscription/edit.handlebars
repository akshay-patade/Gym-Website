<div id="main-wrapper">

    {{> header}}
    {{> sidebar}}
    <div class="content-body">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="page-titles">
                            <h3>Edit Subscription</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <form class="form-valide" action="/admin/subscription/update/{{subscriptions._id}}"
                                    method="post">
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="name">Name <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" required class="form-control input-default" id="name"
                                                name="name" value="{{subscriptions.name}}"
                                                placeholder="Enter a subscription name..">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="description">Description
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <textarea class="form-control input-default" id="description"
                                                name="description" rows="5"
                                                placeholder="Product description">{{subscriptions.description}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="membership_amount">Membership Amount
                                            <span class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="number" required class="form-control input-default"
                                                id="membership_amount" value="{{subscriptions.membership_amount}}"
                                                name="membership_amount" placeholder="1000">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-4 col-form-label" for="duration">Membership Duration <span
                                                class="text-danger">*</span>
                                        </label>
                                        <div class="col-lg-6">
                                            <input type="text" required class="form-control input-default" id="duration"
                                                value="{{subscriptions.duration}}" name="duration" placeholder="1">
                                        </div>
                                    </div>
                                    {{#if err}}
                                    <div class="form-group">
                                        <label class="erro-info">{{err}}</label><br />
                                    </div>
                                    {{/if}}
                                    <div class="form-group row">
                                        <div class="col-lg-8">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #/ container -->
    </div>



    {{> footer}}

</div>